{
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/auth",
      "dest": "index.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/auth/google",
      "dest": "index.js"
    },
    {
      "src": "/auth/google/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/auth/google/callback",
      "dest": "index.js"
    },
    {
      "src": "/auth/google/callback/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/",
      "dest": "build/index.html"
    },
    {
      "src": "/login",
      "dest": "build/index.html"
    },
    {
      "src": "/signup",
      "dest": "build/index.html"
    },
    {
      "src": "/userinfo",
      "dest": "build/index.html"
    },
    {
      "src": "/forgot",
      "dest": "build/index.html"
    },
    {
      "src": "/reset-password",
      "dest": "build/index.html"
    },
    {
      "src": "/reset-password/(.*)",
      "dest": "build/index.html"
    },
    {
      "src": "/verify-email",
      "dest": "build/index.html"
    },
    {
      "src": "/verify-email/(.*)",
      "dest": "build/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "build/$1"
    }
  ]
}
